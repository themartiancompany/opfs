{
  "name": "@themartiancompany/happy-opfs",
  "description": "A browser-compatible fs module inspired by the Deno fs and @std/fs APIs, based on OPFS implementation.",
  "homepage": "https://github.com/JiangJie/happy-opfs",
  "bugs": {
    "url": "https://github.com/JiangJie/happy-opfs/issues"
  },
  "author": {
    "name": "Jiang Jie",
    "email": "jiang115jie@gmail.com",
    "url": "https://github.com/JiangJie"
  },
  "contributors": [ {
    "name": "Pellegrino Prevete",
    "email": "pellegrinoprevete@gmail.com",
    "url": "https://github.com/tallero"
  } ],
  "license": "GPL-3.0",
  "version": "1.8.7",
  "type": "module",
  "source": "src/mod.ts",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "types": "dist/types.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "README.cn.md",
    "package.json",
    "docs",
    "src",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "dlx rimraf .parcel-cache dist",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "prebuild": "rimraf dist && npm run check && npm run lint",
    "build": "rollup --config rollup.config.mjs",
    "predocs": "dlx rimraf docs",
    "docs": "typedoc",
    "prepublishOnly": "rollup --config rollup.config.mjs",
    "start": "parcel serve tests/index.html --dist-dir dist/dev --port 8443 --https --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/themartiancompany/happy-opfs.git"
  },
  "keywords": [
    "fs",
    "system",
    "file",
    "directory",
    "opfs",
    "origin",
    "private",
    "worker",
    "sync",
    "async",
    "upload",
    "download",
    "zip",
    "unzip"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@parcel/packager-ts": "^2.16.0",
    "@parcel/transformer-typescript-types": "^2.16.0",
    "eslint": "^9.32.0",
    "parcel": "^2.16.0",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "4.4.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "@happy-ts/fetch-t": "^1.3.2",
    "@std/path": "npm:@themartiancompany/std__path@^1.1.1",
    "dlx": "^0.2.1",
    "fflate": "^0.8.2",
    "happy-rusty": "^1.5.0",
    "rimraf": "^6.1.0",
    "tiny-future": "^1.1.0",
    "tiny-invariant": "^1.3.3"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  }
}
